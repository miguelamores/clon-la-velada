---
import BoxerTitleName from "@/components/BoxerTitleName.astro";

interface Props {
  readonly id: string;
  readonly name: string;
  readonly country: string;
  readonly countryName?: string;
  readonly loading?: "lazy" | "eager";
}

const { id, name, country, countryName, loading } = Astro.props;
---

<picture class:list={"aspect-[285/428] h-auto w-full max-w-[460px]"}>
  <img
    decoding="async"
    class="boxer-big aspect-[285/428] h-auto w-full object-contain"
    src={`/img/boxers/${id}-big.webp`}
    alt={`Picture of ${name}`}
    loading={loading}
  />
</picture>

<div
  class="absolute bottom-10 z-10 flex max-w-md flex-col items-center justify-center text-wrap md:-bottom-32"
>
  <BoxerTitleName name={name} />
  <img
    decoding="async"
    class:list={"pointer-events-none aspect-[3/2] h-auto w-28 object-contain object-center"}
    src={`/img/flags/${country}.webp`}
    alt={`Flaf of ${countryName}`}
    loading={loading}
  />
</div>

<style>
  .boxer-big {
    filter: drop-shadow(0 0 5px rgba(0, 0, 0, 0.5));
    mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
  }
</style>
